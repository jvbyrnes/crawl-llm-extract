# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Crawler Configuration
# Uncomment and modify these values to override defaults
# MAX_DEPTH=2
# MAX_PAGES=25
# INCLUDE_EXTERNAL=false

# LLM Configuration for Content Extraction
# Uncomment and modify these values to override defaults
# LLM_PROVIDER=openai/gpt-4o
# LLM_TEMPERATURE=0.1

# Filter LLM Configuration for Relevance Scoring
# REQUIRED when using target-topic filtering
# Use faster/cheaper models for filtering, premium models for extraction
# Supported models: gpt-3.5-turbo, gpt-4o, gpt-4o-mini, o1-mini, o1-preview
FILTER_LLM_PROVIDER=openai/gpt-3.5-turbo
FILTER_LLM_TEMPERATURE=0.0